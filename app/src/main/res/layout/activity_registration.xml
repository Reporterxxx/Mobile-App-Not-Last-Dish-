            android:id="@+id/confirm_confidence"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@id/repeat_password"
            android:layout_alignTop="@id/confirm_user_agreement"
            android:layout_marginStart="-7dp"
            android:layout_marginTop="42dp" />

        <TextView
            android:id="@+id/confirm_info2"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/confirm_confidence"
            android:layout_alignTop="@id/confirm_confidence"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:text="@string/i_agree"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            app:lineHeight="20sp" />

        <TextView
            android:id="@+id/confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/confirm_info2"
            android:layout_alignTop="@id/confirm_confidence"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:text="@string/confidence"
            android:textColor="@color/red_address"
            android:textSize="11sp"
            android:textStyle="bold"
            app:lineHeight="20sp" />

